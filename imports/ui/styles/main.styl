.b-layout
  background: #fafafa
  min-height: 100vh

.navbar
  margin-bottom: 20px

.b-form
  background: #fff
  padding: 24px
  box-sizing: border-box

  &_small
    width: 100%
    max-width: 408px

  &-footer
    margin-top: 30px

.table-component__filter
  margin-bottom: 10px

.b-notes
  &-list

    > *
      margin-bottom: 0.75rem

    &-item
      padding: 0.375rem 0.75rem
      border: 1px solid #eee
      border-radius: 0.25rem
      background: #fff

      &:hover
        text-decoration: none
        background: #f5f5f5

      &.active
        color: #fff
        background: #2A7CF6
        border-color: #2A7CF6

      &-title
        display: block

      &-body
        display: block
        white-space: pre
        font-size: 0.6em

  &-note
    background: #fff
    padding: 24px
    width: 100%
    box-sizing: border-box

    &-body
      white-space: pre
